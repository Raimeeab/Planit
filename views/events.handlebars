{{!-- CREATED EVENT CARD + ADD VENUE + ADD VENDOR CARDS --}}
<section id="current-event-section" class="toggle-content p-2" aria-hidden="false">
    <div class="container my-2 py-2">
        <div class="row mb-2 col-12 d-flex justify-content-center align-items-center my-3">
            <h2 class="event-list text-center">Planned Events</h2>
            <hr>

            <div class="card p-4 m-2 col-sm-12 col-md-6 col-lg-3">
                <div class="">
                    <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <h3 class="event-name">{{event.name}}</h3>
                        <p class="event-type">{{event.type}}</p>
                        <p class="event-date">{{event.date}}</p>
                        <p class="event-budget">{{event.budget}}</p>
                        <p class="event-guests">{{event.attendees}}</p>
                    </div>
                </div>
            </div>
            <div id="add-new-event-card" class="card add-new-event-card p-4 m-2 col-sm-12 col-md-6 col-lg-3">
                <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h4 class="h4-event-name">Add Venue</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-sm btn-outline-primary fw-bold add-venue-toggle"
                        aria-controls="toggle-content">ADD</button>
                </div>
            </div>
            <div id="add-new-event-card" class="card add-new-event-card p-4 m-2 col-sm-12 col-md-6 col-lg-3">
                <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h4 class="h4-event-name">Add Vendor</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-sm btn-outline-primary fw-bold add-vendor-toggle"
                        aria-controls="toggle-content">ADD</button>
                </div>
            </div>
        </div>
        {{!-- VENUES ---------------------------------------------------------------}}
        <section class="card toggle-content p-2 m-2" aria-hidden="true">
            <title>{{name}}</title>
            <div class="card-body my-10">

                <span class="venue-id" href="/venues/{{id}}">
                    <h3 class="venue-name text-center">{{name}}</h3>
                </span>
                <img class="venue-img" src="assets/venues/{{image}}" alt="{{name}}" />
                <p class="venue-description text-center">{{venue.description}}</p>
                {{!--
            </div class="venue-toggle" aria-controls="toggle-content"> --}}
            {{!-- <div class="toggle-content p-2" aria-hidden="true"> --}}
                <p class="venue-cap">Maximum capacity: {{venue.capacity}}</p>
                <p class="venue-price">Starting price: {{venue.price}}</p>
                <p class="venue-no">Contact number: {{venue.number}}</p>
                <p class="venue-email">Email: {{venue.email}}</p>
                <button class="btn btn-sm btn-outline-primary fw-bold add-venue-toggle"
                    aria-controls="toggle-content">ADD</button>
            </div>    
        </section>
        {{!-- VENDORS ------------------------------------------------------------}}
        <section class="card toggle-content p-2 m-2" aria-hidden="true">
            <title>{{name}}</title>
            <div class="card-body">
                {{!-- <img class="vendor-img" src="assets/vendors/{{vendor.image}}" alt="{{vendor.name}}" /> --}}
                <p class="vendor-desc">{{description}}</p>
                <p class="vendor-price">Starting price: {{price}}</p>
                <p class="vendor-no">Contact number: {{number}}</p>
                <p class="vendor-email">Email: {{email}}</p>
                <button class="btn btn-sm btn-outline-primary fw-bold add-vendor-toggle"
                        aria-controls="toggle-content">ADD</button>
            </div>
        </section>
    </div>
</section>







<script src="./js/event.js"></script>
<script src="./js/vendor.js"></script>
<script src="./js/venue.js"></script>