<div class="row">
    <div class ="col-auto">
        <h2>vendors</h2>
    </div>
</div>

<div class="row mt-4">
    <div class-"col-md-6">
        {{#each vendors as |vendor|}}
        <div class="row mb-2">
            <div class="col-md-8">
                 {{!-- <img src="{{vendor.image}}"/> --}}
                <h4><a href="/vendors" class="vendor-name">{{vendor.vendorName}}</h4>
            </div>
            <div class="col-md-4">
                <label for="vendor-desc">
                    <p id="vendor-desc">{{vendor.description}}</p>    
                </label>
                <label for="vendor-no">vendor number:</label>
                    <p id="event-no">{{vendor.number}}</p>
                <label for="vendor-email">vendor email:</label>
                    <p id="vendor-email">{{vendor.email}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}

<script src="./js/vendor.js"></script>