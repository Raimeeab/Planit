<section class="container">
    <h1>Vendors</h1>
  <section class="flex-row justify-center">
    <!-- For each painting that belongs to this gallery, the painting-details partial is used to render each painting's data -->
    {{#each vendors as |vendor|}}
    <h1 class="vendor-type">{{vendor.type}}</h1>
    <span class="vendor-id" href="/vendors/{{id}}"><h3 class="vendor-name">{{vendor.name}}</h3></span>
    {{> vendor-details}}
    {{/each}}
  </section>
</section>

<script src="./js/vendor.js"></script>