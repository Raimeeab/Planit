<section class="container">
    <h1>Venues</h1>
  <section class="flex-row justify-center">
    <!-- For each painting that belongs to this gallery, the painting-details partial is used to render each painting's data -->
    {{#each venues as |venue|}}
    <span class="venue-id" href="/venues/{{id}}"><h3 class="venue-name">{{venue.name}}</h3></span>
    <p class="venue-description">{{venue.description}}</p>
    {{> venue-details}}
    {{/each}}
  </section>
</section>


<script src="./js/venue.js"></script>