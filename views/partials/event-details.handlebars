<section class="container venue-card p-2 m-3 d-flex justify-content-center ">
    <div class="card-body d-flex justify-content-center ">
        <title>{{name}}</title>

        <div class="row toggle-content p-2 col-sm-12 col-md-10 col-lg-10" aria-hidden="false">
            <span class="venue-id" href="/venues/{{id}}">
                <h3 class="venue-name text-center">{{name}}</h3>
            </span>
            <div>
                <div class="d-flex justify-content-center py-4">
                    <img class="venue-img img-responsive" src="assets/venues/{{image}}" alt="{{name}}" />
                </div>
                <div>
                    <p class="venue-description text-center">{{description}}</p>
                </div>
                <div class="toggle-content p-2" aria-hidden="true">
                    <p class="venue-cap">Maximum capacity: {{capacity}}</p>
                    <p class="venue-price">Starting price: {{price}}</p>
                    <p class="venue-no">Contact number: {{number}}</p>
                    <p class="venue-email">Email: {{email}}</p>
                </div>
            </div>
        </div class="venue-toggle" aria-controls="toggle-content">
    </div>
</section>

