<main>
  <div class="container my-1 py-1">
    <div class="row mb-1">
      <div class="col-12 d-flex justify-content-center align-items-center my-1">
        <h2>Welcome, {{name}}!</h2>
        <hr>
      </div>
    </div>
  </div>

  {{!-- CURRENT PLANNED EVENT SECTION --}}
  <section id="current-event-section" class="toggle-content p-2" aria-hidden="false">
    <div class="container my-2 py-2">
      <div class="row mb-2">

        {{#if events.length}}
        <div class="col-12 d-flex justify-content-center align-items-center my-3"></div>
        <h3 class="event-list text-center">Planned Events</h3>
        <hr>

        <class="profile-card-container">
          <div class="row d-flex justify-content-center align-self-normal"></div>
          {{#each events as |event|}}
          <div class="card profile-card p-4 m-2 col-sm-12 col-md-6 col-lg-4">
            {{!-- CARD TODO - MAKE IMAGE
            DYNAMIC)!!!!-----------------------------------------------------------------------------------}}
            <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
            <div class="card-body text-center">
              <h4 class="h4-event-name"><a href="/event/{{event.id}}">{{event.name}}</a></h4>
            </div>
            <div class="d-flex justify-content-center">
              <button class="btn btn-sm btn-outline-danger delete-event-btn fw-bold"
                data-id="{{event.id}}">DELETE</button>
            </div>
          </div> 
          
          {{/each}} {{!-- ADD NEW EVENT CARD --}} 
          
           <div id="add-new-event-card" class="add-new-event-card p-4 m-2 col-sm-12 col-md-6 col-lg-4"  class="toggle-content p-2" aria-hidden="false"> 
            <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
            <div class="card-body text-center">
              <h4 class="h4-event-name">+</h4>
            </div>
            <div class="d-flex justify-content-center"></div>
                {{!-- <h4><a href="/event/{{event.id}}">{{event.name}}</a></h4> --}}
                <h1 class="add d-flex justify-content-center align-self-center">+</h1>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    {{/if}}



    {{!-- TODO - THIS DOES NOT WORK AND IT NEEDS FIXING (IF CLICKED TAKES YOU TO AN EMPTY PAGE)!!!!
    -------------------}}
    {{!-- If event selected --}}
    {{#if event.id }}
    {{!-- Display event details --}}
    <h2>{{event-name}}</h2>
    <ul>
      <li>{{event.type}}</li>
      <li>{{event.budget}}</li>
      <li>{{event.guests}}</li>
      <li>{{event.vendors}}</li>
      <li>{{event.venue}}</li>
    </ul>
    {{/if}}
    </div>
    </div>
    </div>
  </section class="register-login-toggle" aria-controls="toggle-content">

  {{!-- CREATE A NEW EVENT SECTION --}}
  <section id="create-new-event-section" class="toggle-content p-2" aria-hidden="true">
    <div class="container my-5 py-5">
      <div class="row mb-5">
        <div class="col-12 d-flex justify-content-center align-items-center my-3">
          <h3>Create a New Event</h3>
          <hr>

        </div>
        <div class="row d-flex justify-content-center align-self-normal">
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card p-4 my-2">
              <form class="form new-event-form">
                {{!-- EVENT SELECT --}}
                <div class="form-group input-group mb-3">
                  <label class="input-group-text" for="event-type">Event Type</label>
                  <select class="form-select" aria-label="event-type" id="event-type">
                    <option selected>None</option>
                    <option value="Wedding">Wedding</option>
                    <option value="Engagement">Engagement</option>
                    <option value="Birthday">Birthday</option>
                    <option value="Christening">Christening</option>
                    <option value="Hens">Hens</option>
                    <option value="Bachelor">Bachelor</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
                {{!-- EVENT NAME --}}
                <div class="form-group">
                  <div class="mb-3">
                    <label for="new-event-name" class="form-label">Event Name</label>
                    <input type="text" class="form-control" id="new-event-name" aria-describedby="newEventNameHelp">
                  </div>
                </div>
                {{!-- EVENT BUDGET --}}
                <div class="form-group">
                  {{!-- <label for="event-budget">Buget ($):</label>
                  <input class="form-input" type="number" id="event-budget" name="event-budget" /> --}}
                  <div class="mb-3">
                    <label for="new-event-budget" class="form-label">Event Budget</label>
                    <input type="text" class="form-control" id="new-event-budget" aria-describedby="newEventBudgetHelp">
                  </div>
                </div>
                {{!-- EVENT GUESTS --}}
                <div class="form-group">
                  {{!-- TODO: Need to be edited in front end js --}}
                  <div class="mb-3">
                    <label for="new-event-guests" class="form-label">Number of Guests</label>
                    <input type="text" class="form-control" id="new-event-guests" aria-describedby="newEventGuestsHelp">
                  </div>
                  {{!-- EVENT DATE --}}
                  <div class="form-group">
                    {{!-- TODO: Need to be edited in front end js --}}
                    <div class="mb-3">
                      <label for="new-event-date" class="form-label">Event Date</label>
                      <input type="text" class="form-control" id="new-event-date" aria-describedby="newEventGuestsHelp">
                    </div>
                  </div>
                  {{!-- EVENT VENUE REQUIRED --}}
                  <div class="form-group py-2">
                    <label for="event-venue">Does the event need a venue?</label>
                    {{!-- TODO: Need to be edited in front end js --}}
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                      <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                      <label class="form-check-label" for="inlineCheckbox2">No</label>
                    </div>
                  </div>
                  <div class="form-group d-flex justify-content-center pt-3">
                    <button type="submit" class="btn btn-outline-primary fw-bold">Create</button>
                  </div>
              </form>
            </div>
          </div>
        </div>
  </section aria-controls="toggle-content">
</main>

<script src="./js/profile.js"></script>