<main>
  <div class="container my-1 py-1">
    <div class="row mb-1">
      <div class="col-12 d-flex justify-content-center align-items-center my-1">
        <h2>Welcome, {{name}}!</h2>
        <hr>
      </div>
    </div>
  </div>

  {{!-- CURRENT PLANNED EVENT SECTION --}}
  <section id="current-event-section" class="toggle-content p-2" aria-hidden="false">
    <div class="container my-2 py-2">
      <div class="row mb-2 col-12 d-flex justify-content-center align-items-center my-3">
        {{#if events.length}}
        <h3 class="event-list text-center">Planned Events</h3>
        <hr>

        <div class="profile-card-container">
          <div class="row d-flex justify-content-center align-self-normal">
            {{#each events as |event|}}
            <div class="card profile-card p-4 m-2 col-sm-12 col-md-6 col-lg-4">
              <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
              <div class="card-body text-center">
                <h4 class="h4-event-name"><a href="/events/{{event.id}}">{{event.name}}</a></h4>
              </div>
              <div class="d-flex justify-content-center">
                <button class="btn btn-sm btn-outline-danger delete-event-btn fw-bold"
                  data-id="{{event.id}}">DELETE</button>
              </div>
            </div>
            {{/each}} {{!-- ADD NEW EVENT CARD --}}
            <div id="add-new-event-card" class="card add-new-event-card p-4 m-2 col-sm-12 col-md-6 col-lg-4">
              <img src="../../assets/venues/watsons-bay.jpeg" class="card-img-top" alt="...">
              <div class="card-body text-center">
                <h4 class="h4-event-name">Add New Event</h4>
              </div>
              <div class="d-flex justify-content-center">
                <button class="btn btn-sm btn-outline-primary fw-bold add-event-toggle" aria-controls="toggle-content">ADD</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/if}}

  </section>

  {{!-- CREATE A NEW EVENT SECTION --}}
  <section id="create-new-event-section" class="toggle-content p-2" aria-hidden="true">
    <div class="container my-5 py-5">
      <div class="row mb-5 d-flex justify-content-center align-items-center">
        <div class="col-12  my-3">
          <h3 class="text-center">Create a New Event</h3>
          <hr>

        </div>
        <div class="row d-flex justify-content-center align-self-normal">
          <div class="col-sm-12 col-md-10 col-lg-8">
            <div class="card p-4 my-2">
              <form class="form new-event-form" id="create-event-form">
                {{!-- EVENT SELECT --}}
                <div class="form-group input-group mb-3">
                  <label class="input-group-text" for="event-type">Event Type</label>
                  <select class="form-select" aria-label="event-type" id="event-type" name="event-type">
                    <option selected>None</option>
                    <option value="Wedding">Wedding</option>
                    <option value="Engagement">Engagement</option>
                    <option value="Birthday">Birthday</option>
                    <option value="Christening">Christening</option>
                    <option value="Hens">Hens</option>
                    <option value="Bachelor">Bachelor</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
                {{!-- EVENT NAME --}}
                <div class="form-group">
                  <div class="mb-3">
                    <label for="new-event-name" class="form-label">Event Name</label>
                    <input type="text" class="form-control" id="new-event-name" name="new-event-name"
                      aaria-describedby="newEventNameHelp">
                  </div>
                </div>
                {{!-- EVENT BUDGET --}}
                <div class="form-group">
                  <div class="mb-3">
                    <label for="new-event-budget" class="form-label">Event Budget</label>
                    <input type="text" class="form-control" id="new-event-budget" name="new-event-budget" a
                      aria-describedby="newEventBudgetHelp">
                  </div>
                </div>
                {{!-- EVENT GUESTS --}}
                <div class="form-group">
                  <div class="mb-3">
                    <label for="new-event-guests" class="form-label">Number of Guests</label>
                    <input type="text" class="form-control" id="new-event-guests" name="new-event-guests"
                      aria-describedby="newEventGuestsHelp">
                  </div>
                </div>
                {{!-- EVENT DATE --}}
                <div class="form-group">
                  <div class="mb-3">
                    <label for="new-event-date" class="form-label">Event Date</label>
                    <input type="date" class="form-control" id="new-event-date" name="new-event-date"
                      aria-describedby="newEventGuestsHelp">
                  </div>
                </div>
                {{!-- EVENT VENUE REQUIRED --}}
                <div class="form-group d-flex justify-content-center pt-3">
                  <button type="submit" id="submitForFilter" class="submitbutton btn btn-sm btn-outline-primary delete-event-btn fw-bold">Create</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section class="add-event-toggle" aria-controls="toggle-content">
</main>

<script src="./js/profile.js"></script>
